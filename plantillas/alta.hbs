{{#if productos.length }}
<table>
    <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Stock</th>
        <th>Categoria</th>
        <th>Detalles</th>
        <th>Foto</th>
        <th>Envio</th>
        <th>Acci√≥n</th>
    </tr>
    {{#each productos}}
    <tr>
        <td>{{nombre}}</td>
        <td>{{precio}}</td>
        <td>{{stock}}</td>
        <td>{{categoria}}</td>
        <td>{{detalles}}</td>
        <td>
            <img style="display:block; margin: 0 auto;" src="{{foto}}" width="50" alt="{{nombre}}">

        </td>
        {{#if envio}}
        <td>Si</td>
        {{else}}
        <td>No</td>
        {{/if}}
        <td>
            {{#if ../validos}}
            <button onclick="productoController.actualizarProducto('{{_id}}')">Actualizar</button>
            {{else}}
            <button disabled onclick="productoController.actualizarProducto('{{_id}}')">Actualizar</button>
            {{/if}}
            <button onclick="productoController.borrarProducto('{{_id}}')">Borrar</button>
        </td>
    </tr>
    {{/each}}
</table>
{{else}}
<h2>No se encontraron productos</h2>
{{/if}}